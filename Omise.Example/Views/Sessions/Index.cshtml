<div class="row">
    <div class="col-md-12">
        @using (Html.BeginForm(new { Action = "Create" }))
		{
            <div class="form-group">
                <label for="PublicKey">Public Key</label>
                <input id="PublicKey" name="PublicKey" type="password" class="form-control" placeholder="pkey_test_..." />
